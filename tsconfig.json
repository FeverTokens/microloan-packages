{
   "compilerOptions": {
      "target": "es2017",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "types": ["jest", "node"]
   },
   "include": ["src/**/*.ts", "tests/**/*.ts","types/*.ts","clients/**/*.ts", "scripts/**/*.ts"]
   
}

